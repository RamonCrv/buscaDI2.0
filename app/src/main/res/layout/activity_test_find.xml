<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindDoc">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editBusc"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="CPF do Documento Perdido"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtCpfID"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProplD"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContatoID"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomeDoProID"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnBuscarFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pesquisar" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtAlertalD"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>